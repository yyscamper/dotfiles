# PERL_LOCAL_LIB_ROOT="/Users/mdt/perl5${PERL_LOCAL_LIB_ROOT:+:${PERL_LOCAL_LIB_ROOT}}"; export PERL_LOCAL_LIB_ROOT;
# PERL_MB_OPT="--install_base \"/Users/mdt/perl5\""; export PERL_MB_OPT;
