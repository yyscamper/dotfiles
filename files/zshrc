export PATH=$PATH:/Users/mdt/.gvm/bin:/Users/mdt/dev/oracle/instantclient_11_2
export DYLD_LIBRARY_PATH=$DYLD_LIBRARY_PATH:/Users/mdt/dev/oracle/instantclient_11_2
# export PYTHONPATH=$PYTHONPATH:/usr/local/lib/python2.7/site-packages
export PATH="/usr/local/opt/bison/bin:$PATH"
export PATH="/usr/local/opt/freetds@0.91/bin:/Users/mdt/Applications/npm/bin:$PATH"
# change brew bottle source: https://lug.ustc.edu.cn/wiki/mirrors/help/brew.git
export HOMEBREW_BOTTLE_DOMAIN=https://mirrors.ustc.edu.cn/homebrew-bottles

# speedup brew install: https://apple.stackexchange.com/a/293252
export HOMEBREW_NO_AUTO_UPDATE=1

source ~/.bash_profile
source ~/.bashrc
source ~/.shrc.common
source ~/.bash-alias
source ~/.shrc.os
source ~/.shrc.mdt
source /usr/local/opt/autoenv/activate.sh

export PATH="/usr/local/opt/freetds@0.91/bin:$PATH"
